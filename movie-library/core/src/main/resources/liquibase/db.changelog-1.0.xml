<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="1.1.0" author="alex.dzyachenka">
        <createTable tableName="actors">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstName" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="lastName" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="birthDate" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.1.1" author="alex.dzyachenka">
        <createTable tableName="cinemas">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.1.2" author="alex.dzyachenka">
        <createTable tableName="cinema_halls">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="onePlaceCost" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.1.3" author="alex.dzyachenka">
        <createTable tableName="cinema_sessions">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sessionDate" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.1.4" author="alex.dzyachenka">
        <createTable tableName="movies">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="genre" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="creationYear" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="profit" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.1.5" author="alex.dzyachenka">
        <createTable tableName="places">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="seatRow" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="seatPlace" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="isTaken" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.1.6" author="alex.dzyachenka">
        <createTable tableName="tickets">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="cost" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_date" type="timestamp" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.1.7" author="alex.dzyachenka">
        <createTable tableName="cinema_movie">
            <column name="cinema_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="movie_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.1.8" author="alex.dzyachenka">
        <createTable tableName="movie_actor">
            <column name="movie_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="actor_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1.1.9" author="alex.dzyachenka">
        <addForeignKeyConstraint baseTableName="movie_actor"
                                 baseColumnNames="movie_id"
                                 constraintName="fk_movie_actor_movie"
                                 referencedTableName="movies"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>
        <addForeignKeyConstraint baseTableName="movie_actor"
                                 baseColumnNames="actor_id"
                                 constraintName="fk_movie_actor_actor"
                                 referencedTableName="actors"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>
    </changeSet>
    <changeSet id="1.1.10" author="alex.dzyachenka">
        <addForeignKeyConstraint baseTableName="cinema_movie"
                                 baseColumnNames="cinema_id"
                                 constraintName="fk_cinema_movie_cinema"
                                 referencedTableName="cinemas"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>
        <addForeignKeyConstraint baseTableName="cinema_movie"
                                 baseColumnNames="movie_id"
                                 constraintName="fk_cinema_movie_movie"
                                 referencedTableName="movies"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>
    </changeSet>
</databaseChangeLog>